                <a href="#<%= feature %>" class="quick-nav-item" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                    <div class="bg-gray-800 border-2 border-transparent hover:border-<%= featureColors[feature] %>-500 p-6 rounded-xl hover:bg-gray-700 transition-all transform hover:translate-y-[-5px] shadow-lg">
                        <div class="flex items-center mb-4">
                            <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center bg-<%= featureColors[feature] %>-500 bg-opacity-20 rounded-full mr-4">
