<%- contentFor('body') %>

<div class="flex items-center justify-center min-h-[80vh] animate-fade-in">
    <div class="text-center space-y-6 max-w-lg mx-auto p-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg animate-slide-in">
        <div class="relative">
            <div class="absolute inset-0 flex items-center justify-center opacity-5">
                <i class="fas fa-exclamation-circle text-9xl"></i>
            </div>
            <div class="relative z-10">
                <h1 class="text-8xl font-bold text-blue-500 mb-4 hover-pulse"><%= error.code %></h1>
                <p class="text-2xl text-gray-600 dark:text-gray-300 mb-8"><%= error.message %></p>
            </div>
        </div>
        
        <div class="space-y-4">
            <p class="text-gray-500 dark:text-gray-400">
                <%= locals.locale.dashboard.error['404'].message %>
            </p>
            
            <div class="flex items-center justify-center space-x-4">
                <a href="/" class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-all transform hover:scale-105 hover:shadow-lg flex items-center space-x-2">
                    <i class="fas fa-home"></i>
                    <span><%= locals.locale.dashboard.error['404'].goHome %></span>
                </a>
                <button onclick="history.back()" class="px-6 py-3 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-all transform hover:scale-105 flex items-center space-x-2">
                    <i class="fas fa-arrow-left"></i>
                    <span><%= locals.locale.dashboard.error['404'].goBack %></span>
                </button>
            </div>
        </div>
        
        <div class="pt-8 border-t border-gray-200 dark:border-gray-700">
            <p class="text-sm text-gray-500 dark:text-gray-400">
                <%= locals.locale.dashboard.error['404'].needHelp %>
                <a href="https://discord.gg/X2H46apn8T" target="_blank" class="text-blue-500 hover:text-blue-600 hover:underline">
                    Discord server
                </a>
            </p>
        </div>
    </div>
</div>
