<%- contentFor('body') %>

<div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl shadow-lg mb-6 overflow-hidden animate-fade-in">
  <div class="relative p-6 md:p-8">
    <div class="absolute right-0 top-0 opacity-10">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-64 h-64">
        <path d="M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22l-1.92 3.32c-.12.21-.07.47.12.61l2.03 1.58c-.05.3-.09.63-.09.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z"></path>
      </svg>
    </div>
    <div class="relative z-10">
      <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2"><%= locale.dashboard.settings.title %></h1>
      <p class="text-blue-100 mb-4 max-w-2xl">
        <%= locale.dashboard.settings.subtitle %>
      </p>
      
      <div class="flex flex-wrap gap-3 mt-4">
        <div class="flex items-center gap-2 bg-white/20 rounded-full px-4 py-1.5">
          <div class="h-2.5 w-2.5 rounded-full bg-green-400 animate-pulse"></div>
          <span class="text-sm font-medium">Settings Ready</span>
        </div>
        <div class="flex items-center gap-2 bg-white/20 rounded-full px-4 py-1.5">
          <div class="h-2.5 w-2.5 rounded-full bg-blue-400"></div>
          <span class="text-sm font-medium">Last Updated: <%= new Date().toLocaleString() %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 border-b border-blue-200 dark:border-blue-800/50">
      <div class="flex items-center">
        <div class="w-10 h-10 flex-shrink-0 rounded-lg bg-blue-500 dark:bg-blue-600 flex items-center justify-center text-white">
          <i class="fas fa-language"></i>
        </div>
        <div class="ml-4">
          <h2 class="text-xl font-semibold text-gray-800 dark:text-white">
            <%= locale.dashboard.settings.languageSettings %>
          </h2>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Configure the bot's default and supported languages
          </p>
        </div>
      </div>
    </div>
    
    <div class="p-6">
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          <%= locale.dashboard.settings.defaultLanguage %>
        </label>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="relative">
            <input id="defaultLang_en" type="radio" name="defaultLanguage" value="en" 
                   <%= settings.defaultLanguage === 'en' ? 'checked' : '' %> 
                   class="sr-only peer">
            <label for="defaultLang_en" 
                   class="flex items-center p-4 border rounded-lg cursor-pointer
                          peer-checked:border-blue-500 peer-checked:bg-blue-50 dark:peer-checked:bg-blue-900/20
                          border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800
                          hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-all">
              <div class="w-8 h-6 relative overflow-hidden rounded mr-3">
                <img src="https://flagcdn.com/w40/us.png" alt="English" 
                     class="absolute inset-0 w-full h-full object-cover">
              </div>
              <div class="flex-grow">
                <span class="text-gray-800 dark:text-white font-medium">English</span>
              </div>
              <div class="w-5 h-5 flex items-center justify-center rounded-full
                         peer-checked:bg-blue-500 peer-checked:text-white
                         bg-gray-200 dark:bg-gray-700 text-transparent">
                <i class="fas fa-check text-xs"></i>
              </div>
            </label>
          </div>
          
          <div class="relative">
            <input id="defaultLang_ar" type="radio" name="defaultLanguage" value="ar" 
                   <%= settings.defaultLanguage === 'ar' ? 'checked' : '' %> 
                   class="sr-only peer">
            <label for="defaultLang_ar" 
                   class="flex items-center p-4 border rounded-lg cursor-pointer
                          peer-checked:border-blue-500 peer-checked:bg-blue-50 dark:peer-checked:bg-blue-900/20
                          border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800
                          hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-all">
              <div class="w-8 h-6 relative overflow-hidden rounded mr-3">
                <img src="https://flagcdn.com/w40/sa.png" alt="العربية" 
                     class="absolute inset-0 w-full h-full object-cover">
              </div>
              <div class="flex-grow">
                <span class="text-gray-800 dark:text-white font-medium">العربية</span>
              </div>
              <div class="w-5 h-5 flex items-center justify-center rounded-full
                         peer-checked:bg-blue-500 peer-checked:text-white
                         bg-gray-200 dark:bg-gray-700 text-transparent">
                <i class="fas fa-check text-xs"></i>
              </div>
            </label>
          </div>
        </div>
      </div>
      
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          <%= locale.dashboard.settings.supportedLanguages %>
        </label>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="relative">
            <input id="supportLang_en" type="checkbox" name="supportedLanguages" value="en" 
                   <%= settings.supportedLanguages?.includes('en') ? 'checked' : '' %> 
                   class="sr-only peer">
            <label for="supportLang_en" 
                   class="flex items-center p-4 border rounded-lg cursor-pointer
                          peer-checked:border-green-500 peer-checked:bg-green-50 dark:peer-checked:bg-green-900/20
                          border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800
                          hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-all">
              <div class="w-8 h-6 relative overflow-hidden rounded mr-3">
                <img src="https://flagcdn.com/w40/us.png" alt="English" 
                     class="absolute inset-0 w-full h-full object-cover">
              </div>
              <div class="flex-grow">
                <span class="text-gray-800 dark:text-white font-medium">English</span>
              </div>
              <div class="w-5 h-5 flex items-center justify-center rounded border
                         peer-checked:border-green-500 peer-checked:bg-green-500 peer-checked:text-white
                         border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-transparent">
                <i class="fas fa-check text-xs"></i>
              </div>
            </label>
          </div>
          
          <div class="relative">
            <input id="supportLang_ar" type="checkbox" name="supportedLanguages" value="ar" 
                   <%= settings.supportedLanguages?.includes('ar') ? 'checked' : '' %> 
                   class="sr-only peer">
            <label for="supportLang_ar" 
                   class="flex items-center p-4 border rounded-lg cursor-pointer
                          peer-checked:border-green-500 peer-checked:bg-green-50 dark:peer-checked:bg-green-900/20
                          border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800
                          hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-all">
              <div class="w-8 h-6 relative overflow-hidden rounded mr-3">
                <img src="https://flagcdn.com/w40/sa.png" alt="العربية" 
                     class="absolute inset-0 w-full h-full object-cover">
              </div>
              <div class="flex-grow">
                <span class="text-gray-800 dark:text-white font-medium">العربية</span>
              </div>
              <div class="w-5 h-5 flex items-center justify-center rounded border
                         peer-checked:border-green-500 peer-checked:bg-green-500 peer-checked:text-white
                         border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-transparent">
                <i class="fas fa-check text-xs"></i>
              </div>
            </label>
          </div>
        </div>
        
        <div class="mt-3 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-700 rounded-lg p-3">
          <div class="flex items-start text-yellow-700 dark:text-yellow-200">
            <i class="fas fa-info-circle text-yellow-500 mt-0.5 mr-2"></i>
            <p class="text-xs">
              Default language must be included in supported languages.
            </p>
          </div>
        </div>
      </div>
      
      <div class="flex justify-end mt-6">
        <button id="saveLanguageSettings" class="px-4 py-2 bg-blue-600 text-white rounded-lg
                                                hover:bg-blue-700 focus:outline-none focus:ring-2
                                                focus:ring-blue-500 focus:ring-opacity-50 
                                                transition-colors duration-200
                                                flex items-center justify-center space-x-2">
          <i class="fas fa-save"></i>
          <span><%= locale.dashboard.settings.saveChanges %></span>
        </button>
      </div>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-purple-50 to-purple-100 dark:from-purple-900/20 dark:to-purple-800/20 border-b border-purple-200 dark:border-purple-800/50">
      <div class="flex items-center">
        <div class="w-10 h-10 flex-shrink-0 rounded-lg bg-purple-500 dark:bg-purple-600 flex items-center justify-center text-white">
          <i class="fas fa-user-tag"></i>
        </div>
        <div class="ml-4">
          <h2 class="text-xl font-semibold text-gray-800 dark:text-white">
            <%= locale.dashboard.autoRoles?.title || "Auto Roles Settings" %>
          </h2>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Configure automatic role assignment for new members and bots
          </p>
        </div>
      </div>
    </div>
    
    <div class="p-6">
      <div class="mb-6">
        <label class="relative inline-flex items-center cursor-pointer">
          <input type="checkbox" id="autoRolesEnabled" class="sr-only peer" <%= settings.autoRoles?.enabled ? 'checked' : '' %>>
          <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 
                      dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-700 
                      peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full 
                      peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] 
                      after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full 
                      after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-purple-600"></div>
          <span class="ml-3 text-sm font-medium text-gray-800 dark:text-gray-300">
            <%= locale.dashboard.autoRoles?.enabled || "Enable Auto Roles" %>
          </span>
        </label>
      </div>
      
      <div class="mb-6">
        <div class="border-b border-gray-200 dark:border-gray-700">
          <ul class="flex flex-wrap -mb-px">
            <li class="mr-2">
              <button class="inline-block p-4 border-b-2 border-purple-500 rounded-t-lg active text-purple-500" 
                     id="members-tab" data-tabs-target="#members-content" type="button" role="tab" 
                     aria-controls="members" aria-selected="true">
                <%= locale.dashboard.autoRoles?.members || "Member Auto Roles" %>
              </button>
            </li>
            <li class="mr-2">
              <button class="inline-block p-4 border-b-2 border-transparent rounded-t-lg 
                            hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300" 
                     id="bots-tab" data-tabs-target="#bots-content" type="button" role="tab" 
                     aria-controls="bots" aria-selected="false">
                <%= locale.dashboard.autoRoles?.bots || "Bot Auto Roles" %>
              </button>
            </li>
          </ul>
        </div>
        
        <div id="autoRolesTabContent" class="mt-4">
          <div class="block" id="members-content" role="tabpanel" aria-labelledby="members-tab">
            <div class="flex items-center mb-4">
              <input id="memberAutoRolesEnabled" type="checkbox" <%= settings.autoRoles?.members?.enabled ? 'checked' : '' %> 
                    class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded 
                           focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 
                           dark:bg-gray-700 dark:border-gray-600">
              <label for="memberAutoRolesEnabled" class="ml-2 text-sm font-medium text-gray-800 dark:text-gray-300">
                <%= locale.dashboard.autoRoles?.enabled || "Enable Member Auto Roles" %>
              </label>
            </div>
            
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              <%= locale.dashboard.autoRoles?.membersDescription || "Automatically assign roles to new members when they join your server." %>
            </p>
            
            <div class="mb-4">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                <%= locale.dashboard.autoRoles?.selectRoles || "Select Roles" %>
              </label>
              <select id="memberRoles" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                                            focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 
                                            dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 
                                            dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500" multiple>
                <% 
                const guild = typeof client !== 'undefined' && config ? client.guilds.cache.get(config.mainGuildId) : null;
                %>
                <% if (guild) { %>
                  <% guild.roles.cache
                    .filter(role => role.id !== guild.id && !role.managed)
                    .sort((a, b) => b.position - a.position)
                    .forEach(role => { %>
                    <option value="<%= role.id %>" <%= settings.autoRoles?.members?.roleIds?.includes(role.id) ? 'selected' : '' %>><%= role.name %></option>
                  <% }); %>
                <% } %>
              </select>
            </div>
            
            <div class="mt-4 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Selected Roles:</h4>
              <div class="flex flex-wrap gap-2" id="memberRolesList">
                <% if (settings.autoRoles?.members?.roleIds?.length > 0) { %>
                  <% settings.autoRoles.members.roleIds.forEach(roleId => { %>
                    <% const role = typeof guild !== 'undefined' && guild ? guild.roles.cache.get(roleId) : null; %>
                    <% if (role) { %>
                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
                      <%= role.name %>
                    </span>
                    <% } %>
                  <% }); %>
                <% } else { %>
                  <span class="text-gray-500 dark:text-gray-400 text-sm"><%= locale.dashboard.autoRoles?.noRolesSelected || "No roles selected" %></span>
                <% } %>
              </div>
            </div>
          </div>
          
          <div class="hidden" id="bots-content" role="tabpanel" aria-labelledby="bots-tab">
            <div class="flex items-center mb-4">
              <input id="botAutoRolesEnabled" type="checkbox" <%= settings.autoRoles?.bots?.enabled ? 'checked' : '' %> 
                    class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded 
                           focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 
                           dark:bg-gray-700 dark:border-gray-600">
              <label for="botAutoRolesEnabled" class="ml-2 text-sm font-medium text-gray-800 dark:text-gray-300">
                <%= locale.dashboard.autoRoles?.enabled || "Enable Bot Auto Roles" %>
              </label>
            </div>
            
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              <%= locale.dashboard.autoRoles?.botsDescription || "Automatically assign roles to new bots when they are added to your server." %>
            </p>
            
            <div class="mb-4">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                <%= locale.dashboard.autoRoles?.selectRoles || "Select Roles" %>
              </label>
              <select id="botRoles" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                                         focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 
                                         dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 
                                         dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500" multiple>
                <% 
                const botGuild = typeof guild !== 'undefined' ? guild : 
                  (typeof client !== 'undefined' && config ? client.guilds.cache.get(config.mainGuildId) : null);
                %>
                <% if (botGuild) { %>
                  <% botGuild.roles.cache
                    .filter(role => role.id !== botGuild.id && !role.managed)
                    .sort((a, b) => b.position - a.position)
                    .forEach(role => { %>
                    <option value="<%= role.id %>" <%= settings.autoRoles?.bots?.roleIds?.includes(role.id) ? 'selected' : '' %>><%= role.name %></option>
                  <% }); %>
                <% } %>
              </select>
            </div>
            
            <div class="mt-4 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Selected Roles:</h4>
              <div class="flex flex-wrap gap-2" id="botRolesList">
                <% if (settings.autoRoles?.bots?.roleIds?.length > 0) { %>
                  <% settings.autoRoles.bots.roleIds.forEach(roleId => { %>
                    <% 
                    const botRoleGuild = typeof guild !== 'undefined' ? guild : 
                      (typeof client !== 'undefined' && config ? client.guilds.cache.get(config.mainGuildId) : null);
                    const role = botRoleGuild ? botRoleGuild.roles.cache.get(roleId) : null; 
                    %>
                    <% if (role) { %>
                    <span class="bg-purple-100 text-purple-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-purple-900 dark:text-purple-300">
                      <%= role.name %>
                    </span>
                    <% } %>
                  <% }); %>
                <% } else { %>
                  <span class="text-gray-500 dark:text-gray-400 text-sm"><%= locale.dashboard.autoRoles?.noRolesSelected || "No roles selected" %></span>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="flex justify-end mt-6">
        <button id="saveAutoRolesSettings" class="px-4 py-2 bg-purple-600 text-white rounded-lg
                                               hover:bg-purple-700 focus:outline-none focus:ring-2
                                               focus:ring-purple-500 focus:ring-opacity-50 
                                               transition-colors duration-200
                                               flex items-center justify-center space-x-2">
          <i class="fas fa-save"></i>
          <span><%= locale.dashboard.settings.saveChanges %></span>
        </button>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
  <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-5">
    <div class="flex">
      <div class="flex-shrink-0">
        <i class="fas fa-info-circle text-blue-500 text-xl"></i>
      </div>
      <div class="ml-4">
        <h3 class="text-md font-medium text-blue-800 dark:text-blue-300">Language Support</h3>
        <p class="text-sm text-blue-700 dark:text-blue-200 mt-1">
          Adding more languages requires creating new translation files in the <code class="bg-blue-100 dark:bg-blue-800 px-1 rounded text-xs">locales</code> directory.
        </p>
      </div>
    </div>
  </div>
  
  <div class="bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-xl p-5">
    <div class="flex">
      <div class="flex-shrink-0">
        <i class="fas fa-lightbulb text-purple-500 text-xl"></i>
      </div>
      <div class="ml-4">
        <h3 class="text-md font-medium text-purple-800 dark:text-purple-300">Role Assignment</h3>
        <p class="text-sm text-purple-700 dark:text-purple-200 mt-1">
          Make sure the bot has sufficient permissions to assign the selected roles to new members and bots.
        </p>
      </div>
    </div>
  </div>
  
  <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-xl p-5">
    <div class="flex">
      <div class="flex-shrink-0">
        <i class="fas fa-question-circle text-green-500 text-xl"></i>
      </div>
      <div class="ml-4">
        <h3 class="text-md font-medium text-green-800 dark:text-green-300">Need Help?</h3>
        <p class="text-sm text-green-700 dark:text-green-200 mt-1">
          Visit our <a href="#" class="underline hover:text-green-900 dark:hover:text-green-100">documentation</a> or join our <a href="#" class="underline hover:text-green-900 dark:hover:text-green-100">Discord server</a> for support.
        </p>
      </div>
    </div>
  </div>
</div> 
